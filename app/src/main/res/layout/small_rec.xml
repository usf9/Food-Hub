<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:backgroundTint="@color/background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_img"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/pizza77"
                app:riv_corner_radius="30dp"


                ></com.makeramen.roundedimageview.RoundedImageView>

            <ImageView
                android:id="@+id/item_rec2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rec_btn"
                android:src="@drawable/rectan"
                tools:ignore="TouchTargetSizeCheck"></ImageView>


            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/item_rec2"
                android:layout_alignEnd="@+id/item_rec2"
                android:layout_alignBottom="@+id/item_rec2"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="12dp"
                android:text="10$"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/item_price"
                android:src="@drawable/wite_heart"></ImageView>

            <ImageView
                android:id="@+id/item_rec1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/item_img"
                android:layout_marginStart="80dp"
                android:layout_marginTop="-19dp"
                android:background="@drawable/rec_btn"
                android:src="@drawable/rectan"
                tools:ignore="TouchTargetSizeCheck"></ImageView>


            <TextView
                android:id="@+id/item_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/item_rec1"
                android:layout_alignBottom="@+id/item_rec1"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:text="4.5  ⭐️"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_img"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:text="McDonald’s"
                android:textColor="@color/balck"
                android:textSize="15sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/item_des"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_title"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:text="itemdes"
                android:textSize="12sp"></TextView>






        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>