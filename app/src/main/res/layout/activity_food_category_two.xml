<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Food_Categories.Food_Category_two"
    tools:ignore="HardcodedText"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="730dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/back_icon"></ImageView>

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="233dp"
                    android:layout_height="162dp"
                    android:layout_marginStart="250dp"
                    android:src="@drawable/dounuts"></ImageView>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-103dp"
                    android:text="Donut"
                    android:textColor="@color/colorPrimary"
                    android:textSize="50sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/dpop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginStart="20dp"
                    android:text="Popular"
                    android:textSize="30sp"
                    android:textStyle="bold"></TextView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/drec1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dpop"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp">

                </androidx.recyclerview.widget.RecyclerView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/small_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drec1"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="5dp">

                </androidx.recyclerview.widget.RecyclerView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/drec2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drec1"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="5dp">

                </androidx.recyclerview.widget.RecyclerView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/drec3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drec2"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="5dp">

                </androidx.recyclerview.widget.RecyclerView>


            </RelativeLayout>
        </ScrollView>


    </LinearLayout>





</androidx.drawerlayout.widget.DrawerLayout>