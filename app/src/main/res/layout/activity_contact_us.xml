<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Secondaryِ_Activities.ContactUsActivity"
    android:background="@color/background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:src="@drawable/topshape"></ImageView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proimg"
        android:layout_centerHorizontal="true"
        android:text="Send a message for us"
        android:textColor="@color/balck"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="278dp" />

    <ImageView
        android:id="@+id/proimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/account_pic"></ImageView>

    <EditText
        android:id="@+id/edite"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView7"
        android:background="@drawable/custom_edit_text_cut"
        android:layout_margin="20dp"></EditText>
    <Button
        android:id="@+id/btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="send a message"
        android:background="@drawable/rec_btn"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_below="@id/edite"
        android:layout_centerHorizontal="true"></Button>



</RelativeLayout>